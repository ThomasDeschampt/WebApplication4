@model IEnumerable<WebApplication4.Models.Equipes>

@{
    ViewBag.Title = "Index";
}

<h2>Equipe de  NBA :</h2>

@using (Html.BeginForm("Index", "equipes", FormMethod.Get))
{
    <input type="text" name="nom" placeholder="Nom de l'équipe">
    <button type="submit">
        <img src="~/Images/loupe.png" height="20px" />
    </button>
}

@if (Model != null && Model.Any())
{
    <h4>Conférence Est :</h4>
    <div>
        @foreach (var item in Model.Where(e => e.CONFERENCE_Equipe == "EST"))
        {
            <a href="@Url.Action("Details", new { id = item.ID_Equipe })" class="team-card">
                <img src="~/Images/Equipes/@(item.ID_Equipe).png" />
                <h3>@Html.DisplayFor(modelItem => item.NOM_Equipe)</h3>
            </a>
        }
    </div>

    <h4>Conférence Ouest :</h4>
    <div>
        @foreach (var item in Model.Where(e => e.CONFERENCE_Equipe == "OUEST"))
        {
            <a href="@Url.Action("Details", new { id = item.ID_Equipe })" class="team-card">
                <img src="~/Images/Equipes/@(item.ID_Equipe).png" />
                <h3>@Html.DisplayFor(modelItem => item.NOM_Equipe)</h3>
            </a>
        }
    </div>
}
else
{
    <p id="phrase">Aucune équipe trouvée.</p>
}



<style>
    .team-card {
        display: inline-block;
        width: 30%;
        margin: 10px;
        padding: 10px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
        cursor: pointer;
    }

        .team-card img {
            max-width: 100px;
            max-height: 100px;
        }

    h3 {
        margin-top: 10px;
        font-size: 18px;
        color: #333;
        text-decoration: none;
    }

    h4 {
        font-size: 24px;
        font-weight: bold;
        margin: 10px 0;
        text-align: center;
    }

    a {
        text-decoration: none;
    }

    h2 {
        text-align: center;
        font-size: 40px;
        font-weight: bold;
    }

    input[type="text"] {
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 16px;
        margin -right: 10px;
        height: 40px;
    }

    /* Style pour le bouton */
    button[type="submit"] {
        background-color: darkblue;
        color: white;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 10px;
        cursor: pointer;
        height: 40px;
    }

</style>